                    <a href="/product/<%= product.code %>" class="stagger-item group block">
                        <div
                            class="bg-zinc-900 aspect-[4/5] relative overflow-hidden mb-8 flex items-center justify-center p-10 border border-white/5">
                            <img src="<%= product.image %>"
                                class="w-full h-full object-contain transition-transform duration-1000 group-hover:scale-110"
                                alt="<%= product.name %>">
                            <div
                                class="absolute top-4 right-4 bg-black/60 backdrop-blur-sm px-3 py-1 text-[10px] font-bold uppercase tracking-widest text-[#C5A059] featured-badge">
                                Featured</div>
                        </div>
